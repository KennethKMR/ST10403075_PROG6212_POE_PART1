<Window x:Class="ST10403075_PROG6212_POE_PART1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monthly Claim System" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" Background="#F7F7F7">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Contract ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Name="ContractID" Grid.Row="0" Grid.Column="1" Width="200" Margin="5" Padding="5"/>

        <Label Content="Claim Amount:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Name="ClaimAmount" Grid.Row="1" Grid.Column="1" Width="200" Margin="5" Padding="5"/>

        <Label Content="Date:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <DatePicker Name="ClaimDate" Grid.Row="2" Grid.Column="1" Margin="5"/>
    </Grid>
</Window>
